[Unit]
Description=Sway Window manager
Documentation=man:sway(5)
PartOf=graphical-session.target
Wants=graphical-session-pre.target
After=graphical-session-pre.target

[Service]
Slice=session.slice
Type=simple
EnvironmentFile=-%h/.config/sway/env
ExecStart=sway
ExecStop=systemctl --user unset-environment MOZ_ENABLE_WAYLAND XDG_CURRENT_DESKTOP WAYLAND_DISPLAY
Restart=on-failure
RestartSec=1
TimeoutStopSec=10
